(welcome)
(set amisounded_dir (askdir
	(prompt "Where do you want AmiSoundED to be installed? A drawer called AmiSoundED will be created there.")
	(help @askdir-help)
	(default @default-dest)
))
(set amisounded_dir (expandpath amisounded_dir))
(set amisounded_dir (tackon amisounded_dir "AmiSoundED"))
(makedir amisounded_dir (infos))
(copyfiles
	(prompt "Copying AmiSoundED program")
	(source "AmiSoundED")
	(infos)
	(dest amisounded_dir)
)
(copyfiles
	(prompt "Copying AmiSoundED readme")
	(source "amisounded.readme")
	(infos)
	(dest amisounded_dir)
)
(set plugins_dir (tackon amisounded_dir "Plugins"))
(set catalogs_dir (tackon amisounded_dir "Catalogs"))
(makedir plugins_dir)
(makedir catalogs_dir)
(copyfiles
	(prompt "Copying plugins")
	(help @copyfiles-help)
	(source "Plugins")
	(pattern "~(#?.info)")
	(dest plugins_dir)
	(confirm)
)
(copyfiles
	(prompt "Copying locale catalogs")
	(help @copyfiles-help)
	(source "Catalogs")
	(pattern "~(#?.#?)")
	(dest catalogs_dir)
	(confirm)
)
(exit)
